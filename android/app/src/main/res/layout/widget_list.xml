<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/widget_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/widget_line_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/line_1_logo"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/train_direction_and_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loading..."
            android:textSize="16sp"
            android:lineHeight="20sp"
            android:textColor="#000"
            android:gravity="start" />

        <TextView
            android:id="@+id/time_remaining_for_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp"
            android:lineHeight="20sp"
            android:textColor="#000"
            android:gravity="end" />
    </LinearLayout>

</LinearLayout>

<!-- replace the default line_1_logo with a loading icon for better UX while widget loads -->
